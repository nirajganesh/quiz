<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:paddingBottom="10dp"
        android:id="@+id/relativeid"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/alert_dailog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        >

        <TextView
            android:id="@+id/alert_header_id"
            android:fontFamily="@font/poppins_medium"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="30dp"
            android:textAlignment="center"
            android:textColor="@color/text_black"
            android:text="Do you want to quit?"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/alert_header_id"
            >
            <Button
                android:layout_marginTop="20dp"
                android:layout_below="@id/alert_header_id"
                android:layout_centerHorizontal="true"
                android:textColor="@color/button_color"
                android:fontFamily="@font/poppins_medium"
                android:id="@+id/yes_id"
                android:layout_marginLeft="5dp"
                android:text="YES"
                android:textSize="14sp"
                android:textAlignment="center"
                android:background="@drawable/secondarybutton_design"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                />
            <Button
                android:layout_marginTop="20dp"
                android:layout_below="@id/alert_header_id"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_medium"
                android:id="@+id/no_id"
                android:layout_marginLeft="5dp"
                android:text="NO"
                android:textSize="14sp"
                android:textAlignment="center"
                android:background="@drawable/button_design"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>